$(document).ready(function() {
  $('.adaptations .context_adaptations_button').click(function() {
    if ($(this).parent().children('.context_adaptations_table').is(':visible')) {
      $(this).html('<%= image_tag("icons/show_adaptations.png") %>');
    }else {
      $(this).html('<%= image_tag("icons/hide_adaptations.png") %>');
    }
    $(this).parent().children('.context_adaptations_table').slideToggle('normal');
  });
})
